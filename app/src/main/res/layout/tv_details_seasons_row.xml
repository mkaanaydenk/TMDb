<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="192dp"
        android:layout_height="480dp"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/season_imageview"
                android:layout_width="192dp"
                android:layout_height="310dp"
                android:src="@drawable/ic_launcher_foreground">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/seasonNameText"
                    style="@style/textViewBorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginStart="5dp"
                    android:textSize="16sp"
                    android:text="Sezon 8">

                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/episodeCountText"
                    style="@style/textViewBorder"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textSize="16sp"
                    android:text="111 Bölüm">

                </com.google.android.material.textview.MaterialTextView>

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/seasonOverviewText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="5"
                android:layout_margin="5dp"
                android:text=" cem wkkw ecm wklecms ef wf weffefaf r greg erg erw gerwg erwg egreg ergew r w er er ew wklec mwkmergegergergear rg erg erg ergqerg erg c">


            </com.google.android.material.textview.MaterialTextView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    
</LinearLayout>